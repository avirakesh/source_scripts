
if [[ $XDG_SESSION_TYPE == "wayland" ]]; then
    alias code="command code --ozone-platform=wayland"
fi;

alias coden="code -n"

# vim
alias vi="vim"
alias vir="view"

# emacs
alias emacs="emacsw"
alias ema="emacsw"

# tmux
alias tmat="tmux attach -t"
alias tmnt="tmux new -t"

# zellij
alias zj="zellij"
alias zja="zellij attach"
alias zjac="zellij attach --create"
